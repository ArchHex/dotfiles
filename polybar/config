[bar/main]
; Bar position

monitor = LVDS-1

bottom = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

; Bar dimensions
width = 100%
height = 30

; over/underline size
line-size = 3

; module separator
