font-2 = siji:pixelsize=13
font-3 = unifont:pixelsize=13

; Modules
modules-left = i3
modules-center = mpd
modules-right = filesystem cpu memory time date battery

; system tray
tray-position = right
tray-detach = false
tray-maxsize = 14
tray-background = ${colours.background}

